@model List<Fund>

@foreach (var fund in Model)
{
	<a asp-action="FundDetails" asp-controller="Fund" asp-route-fund_id="@fund.Fund_ID">

		<div class="subscription d-flex align-items-center">

			<div class="sub_logo">

				<img src="@fund.Fund_Logo" />

			</div>

			<div class="menu_btn_text">

				<p>@fund.Fund_Name</p>

			</div>

		</div>

	</a>
}

<style>
	.subscription {
		width: auto;
		height: 50px;
		border-radius: 5px;
		margin: 10px 10px 10px 5px;
	}

		.subscription:hover {
			cursor: pointer;
		}

			.subscription:hover > .menu_btn_text > p {
				color: #7FF66C !important;
			}

	.sub_logo {
		min-width: 30px;
		width: 30px;
		height: 30px;
		margin: 10px;
		border-radius: 50%;
		overflow: hidden;
	}

		.sub_logo img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

	.subscription > .menu_btn_text {
		max-height: 20px;
		display: inline;
		overflow: hidden;
		font-size: 12px;
		color: white;

	}

	.subscription > .menu_btn_text > p{
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
	}
</style>